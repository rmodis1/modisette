@page
@model modisette.Pages.Admin.ContentForm.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "./Shared/_Layout4";
}

<h1>Delete</h1>
<hr />
<h2>Are you sure you want to delete this course?</h2>
<hr />
<div class="card my-4">
    <div class="card-body">
        <h5 class="card-title">
            @Html.DisplayFor(model => model.Course.Code) - @Html.DisplayFor(model => model.Course.Title)
        </h5>
        <p class="card-text">
            <strong>@Html.DisplayFor(model => model.Course.Semester)</strong> | @Html.DisplayFor(model => model.Course.Year)
        </p>
        <form method="post" class="d-inline">
            <input type="hidden" asp-for="Course.Code" />
            <input type="hidden" asp-for="Course.Year" />
            <input type="hidden" asp-for="Course.Semester" />
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>
