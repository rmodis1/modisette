@page
@model Modisette.Pages.ContactForm.DisplayModel

@{
    ViewData["Title"] = "Display";
    Layout = "./Shared/_Layout4";
}

@if (User.Identity.IsAuthenticated)
{

<h1>Contact Submissions</h1>

<form class="form-inline my-3">
    <div class="input-group">
        <label for="searchString" class="sr-only">Filter by name, message, or notes:</label>
        <input type="text" class="form-control" id="searchString" placeholder="Filter by name, message, or notes" asp-for="SearchString" />
        <div class="input-group-append ps-2">
            <button type="submit" class="btn btn-primary text-light">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].TimeSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contacts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSubmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

}